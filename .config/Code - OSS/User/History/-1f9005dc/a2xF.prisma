// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  price       Int      @default(0)
  category    Category @relation(fields: [categoryId], references: [id])
  picture     String
  categoryId  String
}

model Category {
  id      String    @id @default(uuid())
  name    String    @unique
  Product Product[]
}
