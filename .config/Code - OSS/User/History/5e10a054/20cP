set default-bg                  "#1E1E2E" # Background
set default-fg                  "#CDD6F4" # Foreground

set completion-bg               "#313244" # Background
set completion-fg               "#CDD6F4" # Comment
set completion-group-bg         "#313244" # Background
set completion-group-fg         "#89B4FA" # Comment
set completion-highlight-bg     "#575268" # Selection
set completion-highlight-fg     "#CDD6F4" # Foreground

set statusbar-bg                "#313244" # Background
set statusbar-fg                "#CDD6F4" # Foreground

set notification-error-bg       "#313244" # Red
set notification-error-fg       "#F38BA8" # Foreground
set notification-warning-bg     "#313244" # Orange
set notification-warning-fg     "#FAE3B0" # Selection
set notification-bg             "#313244" # Background
set notification-fg             "#CDD6F4" # Foreground

set inputbar-bg                 "#313244" # Background
set inputbar-fg                 "#CDD6F4" # Foreground

set recolor-lightcolor          "#1E1E2E" # Background
set recolor-darkcolor           "#CDD6F4" # Foreground

set index-bg                    "#1E1E2E" # Background
set index-fg                    "#CDD6F4" # Foreground
set index-active-bg             "#313244" # Current Line
set index-active-fg             "#CDD6F4" # Foreground

set render-loading-fg           "#CDD6F4" # Background
set render-loading-bg           "#1E1E2E" # Foreground

set highlight-color             "#575268" # Orange
set highlight-active-color      "#F5C2E7" # Pink
set highlight-fg                "#F5C2E7" # Pink


# recolor-lightcolor Defines the color value that is used to represent light colors in recoloring mode
# recolor-darkcolor Defines the color value that is used to represent dark colors in recoloring mode
set recolor-lightcolor          rgba(0,0,0,0)

# Get rid of statusbar by default
set guioptions none

set recolor-keephue             "true"
set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard
set recolor                     "true"

map i recolor
map xb toggle_statusbar
map K zoom in
map J zoom out
map L navigate next
map H navigate previous

set adjust-open width
