# ZathuraRC
# User: Berthose Fin

set default-bg                  "#303446" # Background
set default-fg                  "#C6D0F5" # Foreground

set completion-bg               "#414559" # Background
set completion-fg               "#C6D0F5" # Comment
set completion-group-bg         "#414559" # Background
set completion-group-fg         "#8CAAEE" # Comment
set completion-highlight-bg     "#575268" # Selection
set completion-highlight-fg     "#C6D0F5" # Foreground

set statusbar-bg                "#414559" # Background
set statusbar-fg                "#C6D0F5" # Foreground

set notification-error-bg       "#414559" # Red
set notification-error-fg       "#E78284" # Foreground
set notification-warning-bg     "#414559" # Orange
set notification-warning-fg     "#FAE3B0" # Selection
set notification-bg             "#414559" # Background
set notification-fg             "#C6D0F5" # Foreground

set inputbar-bg                 "#414559" # Background
set inputbar-fg                 "#C6D0F5" # Foreground

set recolor-lightcolor          "#303446" # Background
set recolor-darkcolor           "#C6D0F5" # Foreground

set index-bg                    "#303446" # Background
set index-fg                    "#C6D0F5" # Foreground
set index-active-bg             "#414559" # Current Line
set index-active-fg             "#C6D0F5" # Foreground

set render-loading-fg           "#C6D0F5" # Background
set render-loading-bg           "#303446" # Foreground

set highlight-color             "#575268" # Orange
set highlight-active-color      "#F4B8E4" # Pink
set highlight-fg                "#F4B8E4" # Pink


# recolor-lightcolor Defines the color value that is used to represent light colors in recoloring mode
# recolor-darkcolor Defines the color value that is used to represent dark colors in recoloring mode
set recolor-lightcolor          rgba(0,0,0,0)

# Get rid of statusbar by default
set guioptions none

set recolor-keephue             "true"
set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard
set recolor                     "true"

map i recolor
map xb toggle_statusbar
map K zoom in
map J zoom out
map L navigate next
map H navigate previous

set adjust-open width
